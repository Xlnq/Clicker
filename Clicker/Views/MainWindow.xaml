<Window x:Class="Clicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Purple">
    <Grid>
        <Button Content="Click" Command="{Binding ClickCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <TextBlock Text="{Binding Player.Score}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="36"/>
    </Grid>
</Window>
